<Window x:Class="YamlGuiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:otkwpf="clr-namespace:OpenTK.WPF"
        xmlns:local="clr-namespace:YamlGuiWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="GridLayout">
        <otkwpf:OtkWpfControl x:Name="OtkWpfCtrl" VersionMajor="3" VersionMinor="1"
                                        Initialized="OpenGLView_Initialized"
									    Resized="OpenGLView_Resized"
									    OpenGLDraw="OpenGLView_Draw">
        </otkwpf:OtkWpfControl>
    </Grid>
</Window>
